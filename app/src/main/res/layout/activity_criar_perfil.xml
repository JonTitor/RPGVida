<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.puzzle.rpgvida.MainActivity">


    <TextView
        android:id="@+id/tvpnome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etpNome"
        android:layout_alignStart="@+id/etpNome"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="49dp"
        android:text="Nome" />

    <EditText
        android:id="@+id/etpNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="71dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etpUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etpNome"
        android:layout_alignStart="@+id/etpNome"
        android:layout_below="@+id/etpNome"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etpSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etpUsuario"
        android:layout_alignStart="@+id/etpUsuario"
        android:layout_below="@+id/etpUsuario"
        android:layout_marginTop="41dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:selectAllOnFocus="false" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="91dp"
        android:layout_marginStart="91dp"
        android:layout_marginTop="29dp"
        android:layout_toEndOf="@+id/tvpusu"
        android:layout_toRightOf="@+id/tvpusu"
        android:text="Criar Usuario" />

    <TextView
        android:id="@+id/tvpusu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etpUsuario"
        android:layout_alignStart="@+id/etpUsuario"
        android:layout_below="@+id/etpNome"
        android:layout_marginTop="16dp"
        android:text="Usuario" />

    <TextView
        android:id="@+id/tvpsenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etpUsuario"
        android:layout_alignStart="@+id/etpUsuario"
        android:layout_below="@+id/etpUsuario"
        android:layout_marginTop="11dp"
        android:text="Senha" />

    <Button
        android:id="@+id/btnpsalvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/etpSenha"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="12dp"
        android:text="Salvar" />

</RelativeLayout>
